<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">

    <View
        android:id="@+id/brightness_view_top_limit"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#FFFF0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/max_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/brightness_view_top_limit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/brightness_view_bottom_limit"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/min_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/brightness_view_bottom_limit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/brightness_controller_view"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/brightness_view_top_limit"
        app:layout_constraintBottom_toTopOf="@id/brightness_view_bottom_limit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>